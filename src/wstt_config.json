{
    "interface": "wlx00c0cab4b58c",
    "log_file": "./logs/wstt.log",
    "scan_directory": "./scans/",
    "capture_directory": "./caps/",
    "file_naming": {
        "full_scan": "wstt_full-scan-{timestamp}.csv",
        "target_scan": "wstt_filter-scan-{timestamp}.csv",
        "full_cap": "wstt_full-cap-{timestamp}.pcap",
        "filter_cap": "wstt_filter-cap-{timestamp}.pcap"
    },
    "time_control": {
        "options": [
            "duration",
            "packet_limit",
            "manual_stop"
        ]
    },
    "colors": {
        "success": "\\033[92m",
        "info": "\\033[90m",
        "warning": "\\033[93m",
        "error": "\\033[91m",
        "title": "\\033[1;94m",
        "reset": "\\033[0m"
    }
}